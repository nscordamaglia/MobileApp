<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#91dea4" />
            <gradient android:angle="-90" android:startColor="#3abc56" android:endColor="#38b738"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3cc637" />
            <solid android:color="#3dae39"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#78cc79" />
            <gradient android:angle="-90" android:startColor="#5cae51" android:endColor="#36bc3e" />
        </shape>
    </item>
</selector>