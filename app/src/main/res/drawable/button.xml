<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#5097df" />
            <gradient android:angle="-90" android:startColor="#16235c" android:endColor="#385ab7"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3770c6" />
            <solid android:color="#3973ae"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#5097de" />
            <gradient android:angle="-90" android:startColor="#6b93d2" android:endColor="#395aa1" />
        </shape>
    </item>
</selector>